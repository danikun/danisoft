<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?> 
<?import javafx.geometry.*?>
<?import org.controlsfx.control.ButtonBar?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" minWidth="640" minHeight="480">
    <left>
        <VBox alignment="TOP_CENTER" spacing="10" >
            <BorderPane.margin>
                <Insets bottom="10" left="10" right="10" top="10" />
            </BorderPane.margin>
            <TableView fx:id="listTable" BorderPane.alignment="TOP_CENTER" prefWidth="200" VBox.vgrow="ALWAYS">
            </TableView>
            <HBox alignment="CENTER_RIGHT" spacing="10" >
                <ButtonBar fx:id="listButtonBar" />
            </HBox>
        </VBox> 
    </left>
    <center>
        <VBox spacing="10" >
            <BorderPane.margin>
                <Insets bottom="10" left="10" right="10" top="10" />
            </BorderPane.margin>
            <AnchorPane fx:id="formPane" VBox.vgrow="ALWAYS"/>
            <ButtonBar fx:id="formButtonBar" />
        </VBox>
    </center>
</BorderPane>
